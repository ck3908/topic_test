<%= form_for(@topic) do |f| %>
    <% if @topic.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

          <ul>
            <% @topic.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title, style: "width:400px;"%>
    </div>
    <div class="field">
      <%= f.label :sector %><br>
      <%= f.select(:sector, options_for_select(@categories)) %>
      <%#= f.text_field :sector, style: "width:200px;" %>
    </div>
    <div class="field">
      <%= f.label :content %><br>
      <%= f.text_area :content, style: "width:880px; height:150px;" %>
    </div>
    <div class="field">
      <%= f.label :made_by %><br>
      <%= f.text_field :made_by, value: if user_signed_in? then current_user.email else "" end %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
