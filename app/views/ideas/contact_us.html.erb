<% content_for :title do %>
    Contact Us
<% end %>

<h1> contact us </h1>

<%= form_tag do %>
    <%= label_tag "name" %>
    <!-- another way to make name required is have it required on the tag -->
<%#= text_field_tag "name", nil, class: 'sampleclass', required: 'required' %>
    <%= text_field_tag "name", nil, class: 'sampleclass' %><br/>
    <%= label_tag "email address" %>
    <%= email_field_tag "email address", current_user.email %><br/>
    <%= label_tag "comments" %><br/>
    <%= text_field_tag "your comments", nil, style: "width:880px; height:150px;" %> <br/>
    <%= submit_tag "Submit your info" %>
<% end %>

<!-- show params only on commit -->

<% if params[:commit]  %>
    <%= show_params %>
<% end %>